//RSA数据加密算法
class rsa_use
{
#define RSA_LENGTH 2048
char str_e[RSA_LENGTH];
char str_n[RSA_LENGTH];
char str_d[RSA_LENGTH];

public:
	rsa_use();
	~rsa_use();

	int test_class_func();
